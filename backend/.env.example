# Configuration Flask
FLASK_APP=app.py
FLASK_ENV=development
FLASK_DEBUG=True

# Configuration de la base de données
DATABASE_URL=sqlite:///cocktails.db

# Configuration CORS
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# Configuration Mistral AI
# Obtenez votre clé API sur https://console.mistral.ai/
MISTRAL_API_KEY=your_mistral_api_key_here
MISTRAL_MODEL=mistral-large-latest

# Configuration Stability AI (pour SD3)
# Obtenez votre clé API sur https://platform.stability.ai/
# Service prioritaire pour la génération d'images (qualité supérieure)
STABILITY_API_KEY=your_stability_api_key_here

# Configuration serveur
HOST=localhost
PORT=5000

# Configuration de développement
DEBUG_MODE=True
LOG_LEVEL=INFO