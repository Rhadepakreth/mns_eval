# Configuration pour Le Mixologue Augmenté

# Configuration Flask - SÉCURITÉ CRITIQUE
# ATTENTION: Changez OBLIGATOIREMENT ces valeurs en production!
FLASK_ENV=development
FLASK_DEBUG=False

# Clé secrète Flask - GÉNÉREZ UNE CLÉ UNIQUE ET SÉCURISÉE
# Utilisez: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=your_secret_key_here_CHANGE_IN_PRODUCTION

# Base de données
DATABASE_URL=sqlite:///cocktails.db

# CORS - Origines autorisées (séparées par des virgules)
# En production, spécifiez UNIQUEMENT vos domaines autorisés
CORS_ORIGINS=http://localhost:5173,http://localhost:5176

# API Keys - GARDEZ CES CLÉS SECRÈTES
MISTRAL_API_KEY=your_mistral_api_key_here
STABILITY_API_KEY=your_stability_api_key_here

# Modèle Mistral à utiliser
MISTRAL_MODEL=mistral-large-latest

# Configuration serveur
HOST=localhost
PORT=5001

# Logging (optionnel)
LOG_TO_FILE=false
LOG_LEVEL=INFO

# Sécurité additionnelle (optionnel)
# RATE_LIMIT_STORAGE=memory
# ENABLE_HTTPS=false